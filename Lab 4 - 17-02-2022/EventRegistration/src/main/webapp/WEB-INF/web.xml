<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CalculateFees</servlet-name>
        <servlet-class>CalculateFees</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudent</servlet-name>
        <servlet-class>AddStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>DeleteStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStudent</servlet-name>
        <servlet-class>UpdateStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchSummary</servlet-name>
        <servlet-class>FetchSummary</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchEntry</servlet-name>
        <servlet-class>FetchEntry</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculateFees</servlet-name>
        <url-pattern>/CalculateFees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudent</servlet-name>
        <url-pattern>/AddStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStudent</servlet-name>
        <url-pattern>/UpdateStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchSummary</servlet-name>
        <url-pattern>/FetchSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchEntry</servlet-name>
        <url-pattern>/FetchEntry</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>events_registration_page.html</welcome-file>
    </welcome-file-list>
</web-app>
